@prefix : <http://example.org/festividades#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix prov: <http://www.w3.org/ns/prov#> .

<http://example.org/festividades> rdf:type owl:Ontology ;
    rdfs:comment "Ontología para modelar festividades andinas, sus actores, espacios, danzas, roles y documentación." .

############################################################
#  CLASSES
############################################################

:Festividad rdf:type owl:Class ;
    rdfs:comment "Celebración ritual andina que articula comunidades, personajes, danzas y espacios sagrados." .

:Evento rdf:type owl:Class ;
    rdfs:comment "Actividad ritual dentro de una festividad (procesiones, entradas, recorridos)." .

:Danza rdf:type owl:Class ;
    rdfs:comment "Conjunto coreográfico asociado a una festividad." .

:PersonajeRitual rdf:type owl:Class ;
    rdfs:comment "Figura simbólica que actúa o encarna funciones dentro de la festividad." .

:Danzante rdf:type owl:Class ;
    rdfs:subClassOf :PersonajeRitual ;
    rdfs:comment "Participante que interpreta una danza específica." .

:IndividuoDeDanza rdf:type owl:Class ;
    rdfs:subClassOf :Danzante ;
    rdfs:comment "Representación específica de una danza (p. ej., cada Qhapaq Qolla)." .

:RolRitual rdf:type owl:Class ;
    rdfs:comment "Funciones simbólicas de un personaje (protector, mensajero, mediador, etc.)." .

:ObjetoRitual rdf:type owl:Class ;
    rdfs:comment "Elementos materiales utilizados en la actuación ritual (máscara, látigo, vestimenta)." .

:Comunidad rdf:type owl:Class ;
    rdfs:comment "Colectivo social que participa en la festividad." .

:Comparsa rdf:type owl:Class ;
    rdfs:comment "Agrupación de danzantes o actores rituales que representan una misma nación o estilo." .

:LugarSagrado rdf:type owl:Class ;
    rdfs:comment "Espacio geográfico con significación ritual." .

:Documento rdf:type owl:Class ;
    rdfs:comment "Recurso documental (foto, video, audio, texto) que registra la práctica." .

############################################################
#  OBJECT PROPERTIES
############################################################

:formaParteDe rdf:type owl:ObjectProperty ;
    rdfs:domain :Danza ;
    rdfs:range :Festividad ;
    rdfs:comment "Una danza pertenece a una festividad." .

:sePresentaEn rdf:type owl:ObjectProperty ;
    rdfs:domain :Danza ;
    rdfs:range :Evento ;
    rdfs:comment "Indica el evento donde se ejecuta una danza." .

:interpreta rdf:type owl:ObjectProperty ;
    rdfs:domain :IndividuoDeDanza ;
    rdfs:range :Danza ;
    rdfs:comment "Un individuo interpreta una danza." .

:participaEn rdf:type owl:ObjectProperty ;
    rdfs:domain :PersonajeRitual ;
    rdfs:range :Evento ;
    rdfs:comment "Un personaje ritual participa en un evento específico." .

:perteneceA rdf:type owl:ObjectProperty ;
    rdfs:domain :PersonajeRitual ;
    rdfs:range :Comunidad ;
    rdfs:comment "Vincula un personaje con la comunidad que lo respalda." .

:ocurreEn rdf:type owl:ObjectProperty ;
    rdfs:domain :Evento ;
    rdfs:range :LugarSagrado ;
    rdfs:comment "Localización ritual del evento." .

:documenta rdf:type owl:ObjectProperty ;
    rdfs:domain :Documento ;
    rdfs:range :Evento ;
    rdfs:comment "El documento registra un evento." .

:cumpleRol rdf:type owl:ObjectProperty ;
    rdfs:domain :PersonajeRitual ;
    rdfs:range :RolRitual ;
    rdfs:comment "Relaciona un personaje con su función simbólica." .

:usaObjeto rdf:type owl:ObjectProperty ;
    rdfs:domain :PersonajeRitual ;
    rdfs:range :ObjetoRitual ;
    rdfs:comment "Vincula al personaje con objetos rituales." .

:perteneceAComparsa rdf:type owl:ObjectProperty ;
    rdfs:domain :IndividuoDeDanza ;
    rdfs:range :Comparsa ;
    rdfs:comment "Agrupa a danzantes dentro de una comparsa." .

############################################################
#  DATATYPE PROPERTIES
############################################################

:fechaRegistro rdf:type owl:DatatypeProperty ;
    rdfs:domain :Documento ;
    rdfs:range xsd:dateTime ;
    rdfs:comment "Fecha del documento." .

############################################################
#  INDIVIDUALS
############################################################

### FESTIVIDAD

:QoyllurRiti rdf:type :Festividad ;
    rdfs:label "Señor de Qoyllur Rit’i" ;
    owl:sameAs <https://www.wikidata.org/wiki/Q323697> ;
    rdfs:comment "Peregrinación andina al santuario de Sinakara." .

### LUGAR

:SantuarioSinakara rdf:type :LugarSagrado ;
    rdfs:label "Santuario de Sinakara" .

### EVENTOS

:EntradaNaciones rdf:type :Evento ;
    :ocurreEn :SantuarioSinakara ;
    rdfs:label "Entrada de las Naciones" .

### DANZAS

:DanzaQolla rdf:type :Danza ;
    :formaParteDe :QoyllurRiti ;
    :sePresentaEn :EntradaNaciones ;
    rdfs:label "Danza de los Qollas" .

:DanzaUkuku rdf:type :Danza ;
    :formaParteDe :QoyllurRiti ;
    :sePresentaEn :EntradaNaciones ;
    rdfs:label "Danza de los Ukukus" .

### COMUNIDADES

:ComunidadQolla rdf:type :Comunidad ;
    rdfs:label "Comunidad Qolla" .

:ComunidadPaucartambo rdf:type :Comunidad ;
    rdfs:label "Comunidad de Paucartambo" .

### ROLES

:RolGuardián rdf:type :RolRitual ;
    rdfs:label "Guardián" .

### OBJETOS

:MáscaraUkuku rdf:type :ObjetoRitual ;
    rdfs:label "Máscara de Ukuku" .

### PERSONAJES

:PersonajeQolla rdf:type :PersonajeRitual ;
    :participaEn :EntradaNaciones ;
    :perteneceA :ComunidadQolla ;
    rdfs:label "Personaje Qolla" .

:PersonajeUkuku rdf:type :PersonajeRitual ;
    :participaEn :EntradaNaciones ;
    :perteneceA :ComunidadPaucartambo ;
    :cumpleRol :RolGuardián ;
    :usaObjeto :MáscaraUkuku ;
    rdfs:label "Personaje Ukuku" .

### INDIVIDUOS DE DANZA

:IndividuoQolla1 rdf:type :IndividuoDeDanza ;
    :interpreta :DanzaQolla ;
    rdfs:label "Qolla 1" .

:IndividuoUkuku1 rdf:type :IndividuoDeDanza ;
    :interpreta :DanzaUkuku ;
    :perteneceAComparsa :ComparsaUkukus2024 ;
    rdfs:label "Ukuku 1" .

:ComparsaUkukus2024 rdf:type :Comparsa ;
    rdfs:label "Comparsa Ukukus 2024" .
